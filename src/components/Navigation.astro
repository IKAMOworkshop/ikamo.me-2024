<script data-taxi-reload>
	activePage = window.location.pathname
	navButton = document.querySelectorAll('.navigation-light')
	homeNavButton = document.getElementById('home-button')

	navButton.forEach(link => {
		if(link.pathname === activePage){
			link.classList.add('active-nav')
		}
		else{
			link.classList.remove('active-nav')
		}
	})

	if(homeNavButton.pathname === activePage){
		homeNavButton.classList.add('active-nav')
	}
	else{
		homeNavButton.classList.remove('active-nav')
	}
</script>